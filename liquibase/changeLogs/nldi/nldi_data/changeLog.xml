<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
	                    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

	<preConditions>
		<dbms type="postgresql"/>
		<runningAs username="${NLDI_DB_OWNER_USERNAME}"/>
	</preConditions>

	<include file="tables.sql" relativeToChangelogFile="true"/>
	<include file="functions/changeLog.xml" relativeToChangelogFile="true"/>
	<include file="grants.sql" relativeToChangelogFile="true"/>


	<changeSet id="1" author="kkehl">
		<comment>Clear any existing legacy data in the tables</comment>
		<sql splitStatements="true">
			TRUNCATE TABLE NLDI_DATA.CRAWLER_SOURCE;
		</sql>
		<loadData  encoding="UTF-8"
				   file="crawler_source.csv"
				   quotchar="'"
				   relativeToChangelogFile="true"
				   schemaName="nldi_data"
				   separator=","
				   tableName="crawler_source">
		</loadData>
	</changeSet>

</databaseChangeLog>
